// https://cspell.org
// https://github.com/streetsidesoftware/vscode-spell-checker
// NOTE: Settings which are not recognized here are defined in settings.json
{
	"version": "0.2",
	"enabled": true,
	// "checkOnlyEnabledFileTypes" (in settings)
	"enableFiletypes": [
		"json",
		"jsonc",
		"ignore",
		"properties", // gitattributes, *.conf, config
		"log",
		"csv (semicolon)", // exported rules
		"ini", // mTail configuration
		"ssh_config" // Remote-SSH configuration, config
	],
	// BUG: Does not work, but ${workspaceFolder} is the default anyway
	//"globRoot": "${workspaceFolder}",
	"ignorePaths": [
		"/.git",
		"/Logs",
		"/Test/Ruleset.Utility/Encoding",
		"/Config/cSpell/foul/foul.dic",
		"/Config/System/Firewall.msc",
		"**/Modules/VSSetup/VSSetup.psd1",
		"**/Modules/VSSetup//VSSetup.psm1",
		"**/Modules/VSSetup/VSSetup.types.ps1xml"
	],
	"noConfigSearch": false,
	// "spellCheckOnlyWorkspaceFiles" (in settings)
	"useGitignore": true,
	"caseSensitive": false,
	// "customDictionaries"(in settings)
	"ignoreWords": [],
	"language": "en-US",
	"allowCompoundWords": true,
	"enabledLanguageIds": [
		"markdown",
		"plaintext",
		"powershell",
		"xml",
		"csharp", // Source code for DLL's
		"yaml", // GitHub actions
		"html", // In docs folder
		"javascript" // In Actions - publish sitemap
	],
	// "blockCheckingWhenAverageChunkSizeGreaterThan" (in settings)
	// "blockCheckingWhenLineLengthGreaterThan": (in settings)
	// "blockCheckingWhenTextChunkSizeGreaterThan": (in settings)
	// "checkLimit": (in settings)
	// "spellCheckDelayMs": (in user settings)
	"suggestionsTimeout": 400,
	// "autoFormatConfigFile": (in settings)
	// "diagnosticLevel": (in settings)
	"maxDuplicateProblems": 3,
	"maxNumberOfProblems": 20,
	"minWordLength": 4,
	"numSuggestions": 8,
	// "showAutocompleteSuggestions": (in settings)
	// "showCommandsInEditorContextMenu": (in settings)
	// "showStatus": (in settings)
	// "showStatusAlignment": (in settings)
	// "showSuggestionsLinkInEditorContextMenu": (in settings)
	// "suggestionMenuType": (in settings)
	"suggestionNumChanges": 3,
	// TODO: test with true
	"validateDirectives": false,
	"words": [
		"autoconfiguration",
		"Behaviour",
		"bigendianutf",
		"Bugfixes",
		"Cloneable",
		"displayname",
		"dmcertinst",
		"endregion",
		"Getstarted",
		"globbing",
		"informations",
		"launchable",
		"Mitigations",
		"nonlocal",
		"Recertification",
		"Recurse",
		"redirector",
		"socio",
		"uncheck",
		"Undock",
		"Unencrypted",
		"unfound",
		"ungrouped",
		"uninstallation",
		"unnecesarry",
		"Unprotect",
		"Unregistering",
		"untracked",
		"Untrusted",
		"Uploader"
	],
	"flagWords": [
		// Defined in Config\cSpell\foul\foul.dic
	]
}
